<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".RegisterPlanActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/register_title_TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:textColor="@color/mainTextColor"
            android:text="일정 제목"
            android:textStyle="bold"/>


        <EditText
            android:id="@+id/register_title_EditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:background="@drawable/createborderline"
            android:ems="10"
            android:hint="일정제목을 입력해주세요"
            android:inputType="textPersonName"
            android:padding="10dp"
            android:textColor="#cdcdcd" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/register_ChooseDateTime_TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="날짜 및 시간 선택"
            android:textColor="@color/mainTextColor"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="5">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/register_startDate_TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/roundborderline"
                    android:padding="10dp"
                    android:text="startDate"
                    android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

                <TextView
                    android:id="@+id/register_startTime_TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/roundborderline"
                    android:padding="10dp"
                    android:text="startTime"
                    android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"></LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/register_endDate_TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/roundborderline"
                    android:padding="10dp"
                    android:text="endDate"
                    android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

                <TextView
                    android:id="@+id/register_endTime_TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/roundborderline"
                    android:padding="10dp"
                    android:text="endTime"
                    android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/register_aboutPlan_TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="내용"
            android:textColor="@color/mainTextColor"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/register_aboutPlan_EditText"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@drawable/createborderline"
            android:ems="10"
            android:hint="일정에 대한 설명을 써주세요"
            android:inputType="textMultiLine"
            android:padding="10dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/register_recommandTime_TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="추천시간"
            android:textColor="@color/mainTextColor"
            android:textStyle="bold" />

        <Button
            android:id="@+id/register_getTime_Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="추천시간받기" />

        <TextView
            android:id="@+id/register_getTime_TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="추천시간이 입력됩니다."
            android:padding="10dp"
            android:textColor="@color/mainTextColor"
            android:background="@drawable/createborderline"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="장소"
            android:textColor="@color/mainTextColor"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/register_location_EditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/createborderline"
            android:ems="10"
            android:hint="장소를 입력해주세요"
            android:inputType="textPersonName"
            android:padding="10dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/register_registerPlan_Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="작성 완료"
            android:textColor="@color/buttonTextColor"
            android:textStyle="bold"
            android:background="@drawable/round_button"/>
    </LinearLayout>
</LinearLayout>
</ScrollView>